<% if (Setting.plugin_redmine_favorite_projects['show_in_app_menu']) && @project.nil? %>
<div style="display:none">
<div id="fav_projs">
    <% favorite_projects = favorite_list %>
    <% if !favorite_projects.nil? && favorite_projects.any? %>
        <% favorite_projects.each do |fav| %>
            <li><%= link_to_project fav.project, {}, :class => 'icon' %></li>
        <% end %>
    <% end %>
</div>
</div>
  <script>
  (function() {
    var fav_projs_ = document.getElementById("fav_projs"),
      fav_menu_ = document.getElementById("favorite-menu");
    // Inject projects before menu, and dispose old menu container after
    fav_menu_.parentNode.insertBefore(fav_projs_, fav_menu_);
    fav_menu_.parentNode.removeChild(fav_menu_);
    })();
  </script>
<% end %>
